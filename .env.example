# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/jobqueue?sslmode=disable

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_QUEUES=critical,default,low
WORKER_SHUTDOWN_TIMEOUT=30s

# Scheduler Configuration
SCHEDULER_POLL_INTERVAL=1s

# API Configuration
API_PORT=8080

# Job Defaults
JOB_DEFAULT_TIMEOUT=5m
JOB_DEFAULT_MAX_RETRIES=3
JOB_RETRY_BASE_DELAY=10s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
